<p> 
<%if  @customer.avatar.attached? %>
  <%= image_tag @customer.avatar, style: 'height:10%;width:10%;' %>
<%end%>
</p>

<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @customer.email %>
</p>

<p>
  <strong>Mobile:</strong>
  <%= @customer.mobile %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @customer.birthdate %>
</p>

<p>
  <strong>Address:</strong>
  <%= @customer.address %>
</p>


<br>


<h1>Bookings</h1>


<table class="table table-dark">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Room</th>
      <th>Check in</th>
      <th>Check out</th>
      <th>Number of people</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.customer.name %>  </td>
        <td><%= booking.room.room_number %></td>
        <td><%= booking.check_in %></td>
        <td><%= booking.check_out %></td>
        <td><%= booking.number_of_people %></td>
        <td><%= booking.status %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


