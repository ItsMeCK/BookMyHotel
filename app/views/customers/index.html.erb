<p id="notice"><%= notice %></p>
<h1>Customers</h1>

<%= form_tag customers_path, :method => 'get', :id => "customers_search", class: 'form-inline my-2 my-lg-0' do %>
  <p>
    <%= text_field_tag :search, params[:search], class: 'form-control mr-sm-2' %>
    <%= submit_tag "Search", :name => nil, class: 'btn btn-outline-success my-2 my-sm-0' %>
  </p>
<% end %>


<%= will_paginate @customers %>

<div id="customers"><%= render 'customers' %></div>

<br>
<%= link_to 'New Customer', new_customer_path %>
